<div class="container-edit">
  <div class="edit-form">
    <div class="edit-form-card">
      <div class="form-title">
        <h2>Editar cadastro</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= f.input :name,
                        label: "Nome",
                        hint: "Deixe em branco caso não queira mudar",
                        required: false,
                        input_html: { autocomplete: "nome" } %>
            <%= f.input :surname,
                        label: "Sobrenome",
                        hint: "Deixe em branco caso não queira mudar",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password,
                        hint: "Deixe em branco caso não queira mudar",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirmação de password",
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password,
                        label: "Password atual",
                        hint: "Nós precisamos do seu password atual para confirmar a sua mudança",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          </div>
          <div class="form-actions update form-title">
            <%= f.button :submit, "Update", class: "botao" %>
          </div>
        <% end %>
        <h3>Cancele minha conta</h3>
        <div><%= button_to "Cancelar", registration_path(resource_name), class: "botao-red", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
        <%= link_to "voltar", root_path, class: "voltar" %>
      </div>
    </div>
  </div>
</div>
