
<div class="container-login">

  <div class="login-img">
    <h1 class= "slogan" >A sua plataforma de inteligÃªncia de <span class="dados">dados!</span></h1>
    <img class="bg-img" src=<%=asset_path("bg.png") %> >
  </div>


  <div class="login-form">
    <div class="form-card">
      <div class="form-title">
        <h2 class="welcome">Bem vindo ao</h2>
        <img class="logo-img" src=<%=asset_path("logo.png") %> >
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class:"voltar" %>
          <%= f.input :remember_me, label: "Lembre-se", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions entrar">
          <%= f.button :submit, "Entrar", class: "botao" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
